<Window x:Class="SimulationClient.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimulationClient"
        mc:Ignorable="d"
        Title="Upgrade" Height="150" Width="250" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <TextBlock x:Name="questionBlock" Canvas.Top="20" Canvas.Left="30" />
            <TextBox x:Name="inputBox" Canvas.Top="50" Canvas.Left="100" Width="120"/>
            <Button IsDefault="True" x:Name="OkButton" Width="50" Canvas.Top="90" Canvas.Left="120" Content="OK" Click="Button_Click"/>
            <Button IsCancel="True" Width="50" Canvas.Top="90" Canvas.Left="180" Content="Cancel"/>
        </Canvas>
        
    </Grid>
</Window>
